# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.IndexController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

#Login
GET		/login						controllers.LoginController.login()
POST    /                      		controllers.LoginController.authenticate()
GET     /logout                     controllers.LoginController.logout()

#Signup
GET		/signup						controllers.SignupController.signup()
POST	/signup						controllers.SignupController.createUser()

#UserActivities
GET		/useractivity				controllers.UserActivityController.useractivity()
POST	/useractivity				controllers.UserActivityController.updateUA(id:Long)

#User information
GET		/userinfo					controllers.UserActivityController.userInfo()
POST	/userinfo					controllers.UserActivityController.createUserInfo(email:String)

#Dashboard
GET	/dashboard						controllers.DashboardController.dashboard()